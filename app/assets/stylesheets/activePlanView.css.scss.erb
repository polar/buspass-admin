/*
* Same height as small map.
* It also makes the back link
*/
.activePlanView {
}

.activePlanRoutesView {
  height : 256px;
}

.route-times .route-time {
  font-size: 6pt;
}

/* Display of a Route Code */
.item.route-selected {
  background: pink;
}
.item.route-highlighted {
  background: lightgray;
}
.item.route-invisible {
  display: none;
}
.item .route-code {
  text-align: right;
  width: 50px; /* Overrides "span1" */
}
.item.rtype-journey .route-icon {
  background : url(<%= asset_path 'bus_icon_active.png' %>) no-repeat;
  height : 20px;
  width : 20px;
  float : left;
}
.item.rtype-route .route-icon {
  background : url(<%= asset_path 'route_icon.png' %>) no-repeat;
  height : 20px;
  width : 20px;
  float : left;
}
.item.route-hasactivejourneys .route-icon {
  background : url(<%= asset_path 'route_icon_active.png' %>) no-repeat;
  height : 20px;
  width : 20px;
  float : left;
}

#deploy-ui-buttons {
  padding-top : 10px;
}

/**
 * From H2 of Twitter Bootstrap
 */
#deployment-header {
  float: left;
  font-weight: bold;
  font-size:24px;
  line-height:36px;
}
