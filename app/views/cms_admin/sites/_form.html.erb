<%= form.text_field :label, :id => (@site.new_record?? 'slugify' : nil) %>
<%= form.text_field :identifier, :id => 'slug', :disabled => @site.is_protected? %>
<%= form.text_field :hostname, :disabled => @site.is_protected? %>
<%= form.text_field :path, :disabled => @site.is_protected? %>
<%= form.select :locale, ComfortableMexicanSofa.config.locales.to_a.collect{|l| [l[1], l[0]]} %>

<%= form.simple_field nil, nil, :class => 'submit_element' do %>
  <%= form.submit t(@site.new_record?? '.create' : '.update'), :disable_builder => true %>
<% end %>
