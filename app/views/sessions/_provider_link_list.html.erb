<% for provider in @providers do %>
    <a href="/auth/<%= "#{provider}#{provider == "facebook" ? @fb_options : @options}" %>" class="auth_provider">
      <%= image_tag "auth/#{provider}_64.png", :size => "64x64", :alt => "#{provider.titleize}" %>
      <%= provider.titleize %>
    </a>
<% end %>
<div class="clear"></div>