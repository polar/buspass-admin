<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Main Site</th>
      <th>Administration Site</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
      <% @masters.each do |master| %>
          <tr id="master_<%= master.id -%>">
            <td><%= link_to master.name, website_path(master) %></td>
            <td><%= link_to "#{master.siteurl}", master_active_path(master) %></td>
            <td><%= link_to "#{master.siteurl}/admin", master_path(master) %></td>
            <td><%= link_to "Delete", website_path(master), :class => "btn", :data => {:confirm => "Are you sure?"}, :method => :delete, :remote => true if customer_can?(:delete, master) %></td>
          </tr>
      <% end %>
  </tbody>
</table>