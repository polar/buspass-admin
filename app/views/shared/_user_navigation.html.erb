<div class="user_nav">

  <% if user_signed_in? %>
      <%= link_to('Logout',
                  destroy_user_session_path(:master_id => @master.id),
                  :method=>'delete',
                  :class => "logout") %>
  <% else %>
      <%= link_to('Login',
                  new_user_session_path(:master_id => @master.id),
                  :class => "login")  %>
  <% end %>

  <% if user_signed_in? %>
      <%= link_to('Edit account',
                  edit_user_registration_path(:master_id => @master.id),
                  :class => "edit_account") %>
  <% else %>
      <%= link_to('Sign up',
                  new_user_registration_path(:master_id => @master.id),
                  :class => "sign_up")  %>
  <% end %>


  <%= link_to(current_user.name,
              edit_user_registration_path(:master_id => @master.id),
              :class => "name") if current_user %>

</div>