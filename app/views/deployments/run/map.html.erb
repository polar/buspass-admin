
<head>
  <style type="text/css" id="page-css">
    #processing_log
    {
        width: 100%;
        height: 300px;
        overflow: auto;
    }
  </style>
  <script type="text/javascript">

      $(function () {
          $("body").layout({ applyDefaultStyles:true });
          runStatusView = new BusPass.RunStatusView();
          runStatusView.statusView("#processing_status", {
              // The route helpers don't seem to be available here.
              // updateUrl : "< %= partial_status_deployment_run_path(@deployment, :format => :json) %>"
              updateUrl : "<%= @updateUrl %>",
              'onUpdateStatus' : onUpdateStatus
          });

          activePlanView = new BusPass.ActivePlanBasketController();

          activePlanView.activePlanView("#activePlanView", {
              // The route helpers don't seem to be available here.
              loginUrl : '<%= @loginUrl %>'
          });
          activePlanView.onCreate();
          activePlanView.onStart();
          activePlanView.onResume();
      });
  </script>
</head>

<DIV class="ui-layout-north">North</DIV>
<DIV class="ui-layout-center">
  <div class="row">
    <div class="span16">
      <h2><%= link_to "#{@master.name}", master_path(@master) %>
        Active Deployment
        <%= link_to @municipality.name, master_municipality_path(@municipality, :master_id => @master.id) %>
      </h2>
    </div>
  </div>

  <%=  render :partial => "shared/webmap_active_plan" %>

  <div class="row">
    <div class="span2">
      <%= button_to("Start Run",
                    start_deployment_run_path(@deployment, :format => :js),
                    :id => "start",
                    :remote => true,
                    :disabled => (@job && @job.processing_status != "Stopped")) %>
    </div>
    <div class="span3">
      <%= button_to( "Stop Run", stop_deployment_run_path(@deployment, :format => :js),
                     :id => "stop",
                     :remote => true,
                     :disabled => (@job.nil? || @job.processing_status == "Stopped")) %>
    </div>
  </div>

  <div class="row">
    <div class="span16">
      <%=  render :partial => "shared/processing_status" %>
    </div>
  </div>
</DIV>

<DIV class="ui-layout-south">South</DIV>