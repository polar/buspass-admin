
<table class="table table-bordered">
  <thead>
  <tr>
    <th></th>
    <th>Deployment</th>
    <th>Owner</th>
    <th>Status</th>
    <th colspan="3">Operations</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <th><%= link_to "Active Deployment", master_activement_path(@master) %></th>
    <% if @master.activement %>
        <td><%= @master.activement.deployment.name %></td>
        <td><%= @master.activement.deployment.owner.name %></td>
        <td><%= @master.activement.status %></td>
        <td><%= link_to "Manage", master_activement_path(@master), :class=>"btn" if muni_admin_can?(:edit, @master.activement) %></td>
        <td><%= button_to "Deactivate", deactivate_master_activement_path(@master), :method => :post, :class=>"btn" if muni_admin_can?(:delete, @master.activement) %></td>
    <% else %>
        <td colspan="6">None Active</td>
    <% end %>
  </tr>
  <tr>
    <th><%= link_to "Testing Deployment", master_testament_path(@master) %></th>
    <% if @master.testament %>
        <td><%= @master.testament.deployment.name %></td>
        <td><%= @master.testament.deployment.owner.name %></td>
        <td><%= @master.testament.status %></td>
        <td><%= link_to "Manage", master_testament_path(@master), :class=>"btn" if muni_admin_can?(:edit, @master.testament) %></td>
        <td><%= link_to "Deactivate", deactivate_master_testament_path(@master), :method => :post, :class=>"btn" if muni_admin_can?(:delete, @master.testament) %></td>
    <% else %>
        <td colspan="6">None Active</td>
    <% end %>
  </tr>
  </tbody>
</table>