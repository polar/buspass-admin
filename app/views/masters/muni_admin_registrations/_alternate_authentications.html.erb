<% if @providers && !@providers.empty? %>
    <br />
    <br />

    <p>You may also add these to this account so that you may login with those as well.</p>
    <div class="authentications">
      <% for provider in @providers %>
          <a href='<%= "/auth/#{provider}#{@oauth_options}" %>' class="auth_provider">
            <%= image_tag "auth/#{provider}_64.png", :size => "64x64", :alt => "#{provider.titleize}" %>
            <%= provider.titleize %>
          </a>
      <% end %>
    </div>
<% end %>