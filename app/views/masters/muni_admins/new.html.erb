<h2><%= @master.name %> Administrative Users</h2>
<h3>Create New Administrator</h3>

<%= form_for(@muni_admin, :url => master_muni_admins_path(:master_id => @master.id)) do |f| %>
    <%= error_messages!(@muni_admin) %>

    <div>
      <%= f.label :email %>
      <br/>
      <%= f.email_field :email %>
      <br/>
      <%= f.label :name %>
      <br/>
      <%= f.email_field :name %>
      <br/>
      <%= f.label :password, "New Password" %>
      <br/>
      <%= f.password_field :password %>
      <br/>
      <%= f.label :password_confirmation, "Confirm Password" %>
      <br/>
      <%= f.password_field :password_confirmation %>
    </div>
    <div>
      <%= f.label :possible_roles, "Select Roles for this administrative user" %>
      <br />
      <% for r in @muni_admin.possible_roles do %>
          <div>
            <%= f.label "roles_"+r.to_s, r.to_s.humanize %>
            <%= check_box_tag "muni_admin[roles][]", r, @muni_admin.has_role?(r) %>
          </div>
      <% end %>
    </div>
    <%= f.hidden_field :master_id, :value => @master.id %>
    <%= f.label :nothing, "Email User about account?" %>
    <%= check_box_tag "email_user", "1" %>
    <div><%= f.submit "Create Administrator"%></div>

<% end %>
<%= button_to "Cancel",  master_muni_admins_path(:master_id => @master.id), :method => :get %>
<p>
  <%= link_to "Administrative Users", master_muni_admins_path(:master_id => @master.id) %>
</p>
