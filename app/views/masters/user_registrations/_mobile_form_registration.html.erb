<%= form_for @user,
             :url => @user.new? ? create_mobile_master_user_registrations_path(@master) :
                     update_mobile_master_user_registration_path(@master, @user),
             :validate => true, :class => "form-horizontal" do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>You have <%= pluralize(@user.errors.count, "error") %> errors.</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>                   ]
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>
    <br />
    <br />
  <div class="actions">
    <%= f.submit (@user.new? ? "Create Account" : "Update Info"), :class => "btn" %>
  </div>
<% end %>
