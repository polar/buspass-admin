<h2>Municipality</h2>
<table class="table table-bordered">
  <tbody>
  <tr>
    <th>Name</th>
    <td><%= @master.name %></td>
  </tr>
  <tr>
    <th>Location</th>
    <td><%= to_location_str(@master.location) %></td>
  </tr>
  <tr>
    <th>Time Zone</th>
    <td><%= @master.time_zone %></td>
  </tr>
  <tr>
    <th>Owner</th>
    <td><%= @master.owner.name if !@master.owner.nil? %></td>
  </tr>
  </tbody>
</table>
<% if @master.deployment %>
    <p>
      <%= link_to "View", deployment_path(@master.deployment) %>
    </p>
<% end %>
<% if @master.testament %>
    <p>
        <%= link_to "View Testing Deployment", testament_path(@master.testament) %>
    </p>
<% end %>
<% if muni_admin_can?(:manage, @master) %>
    <p>
        <%= link_to "Plan #{@master.name}", master_municipalities_path(:master_id => @master.id) %>
    </p>
<% end %>
<% if admin_can?(:edit, @master) || muni_admin_can?(:edit, @master)  %>
    <p>
<%= link_to("Edit Information", edit_master_path(@master)) %>
    </p>
<% end %>
<p>
  <%= link_to "#{@master.name} Home", master_municipalities_path(@master) %>
</p>
<p>
    <%= link_to "All Municipalities", masters_path %>
</p>
