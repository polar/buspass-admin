<% content_for :head do %>

    <script type="text/javascript">
        var debug = false;
        var runStatusView;
        $(function () {
            activePlanView = new BusPass.ActivePlanBasketController();

            activePlanView.activePlanView("#activePlanView", {
                loginUrl:'<%= @loginUrl %>',
                center: <%= @center %>,
                initialZoom:13
            });
            // Start the show!
            activePlanView.onCreate();
            activePlanView.onStart();
            activePlanView.onResume();


            $("#sim_clock").clock({format:"24"});
            $("#sim_clock").show();
            // jqClock floats to the left!
            $("#sim_clock").css("float", "right");
        });
    </script>
<% end %>