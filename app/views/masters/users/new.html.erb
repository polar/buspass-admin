<h2><%= @master.name %> General Users</h2>
<h3>Create New User</h3>

<%= form_for(@user, :url => master_users_path(:master_id => @master.id)) do |f| %>
    <%= error_messages!(@user) %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :name %>
      <%= f.email_field :name %>
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :possible_roles, "Select Roles for this user" %>
      <% for r in @user.possible_roles do %>
            <%= check_box_tag "user[roles][]", r, @user.has_role?(r) %>
            <%= f.label "roles_"+r.to_s, r.to_s.humanize %>
      <% end %>
    <%= f.hidden_field :master_id, :value => @master.id %>
    <%= f.label :nothing, "Email User about account?" %>
    <%= check_box_tag "email_user", "1" %>
    <div><%= f.submit "Create User", :class=>"btn"%></div>

<% end %>
<%= button_to "Cancel",  master_users_path(:master_id => @master.id), :class=>"btn", :method => :get %>
<p>
  <%= link_to "All Users", master_users_path(:master_id => @master.id) %>
</p>
