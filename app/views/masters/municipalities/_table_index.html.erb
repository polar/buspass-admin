
<table class="table table-striped">
  <thead>
  <tr>
    <th>Deployment</th>
    <th>Owner</th>
    <th>Networks</th>
    <th colspan="3">Operations</th>
  </tr>
  </thead>
  <tbody>
  <% @master.municipalities.each do |muni| %>
      <tr>
        <td><%= link_to muni.name, master_municipality_path(@master, muni) %></td>
        <td><%= muni.owner.name %></td>
        <td><%= muni.networks.count %></td>
        <td><%= link_to("Edit", edit_master_municipality_path(@master, muni), :class=>"btn") if muni_admin_can?(:edit, muni) %></td>
        <td><%= link_to("Plan", master_municipality_path(@master, muni), :class=>"btn") if muni_admin_can?(:edit, muni) %></td>
        <td><%= link_to("Delete", master_municipality_path(@master, muni), :class=>"btn", :method => :delete, :confirm => "Are you sure?") if muni_admin_can?(:delete, muni) %></td>
      </tr>
  <% end %>
  </tbody>
</table>