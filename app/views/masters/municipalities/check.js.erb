// This updates the status div in the show page.
$("#status").html("<%= escape_javascript(render(:partial => "ulist", :locals => { :items => @status })) %>");

// Change the Label on the button to "recheck"
$("#check")[0].value="Recheck Deploy Status";

var show_deploy_button = <%= escape_javascript("#{@show_deploy_button}") %> ;
if(show_deploy_button) {
   $("#deploy_button").show();
} else {
   $("#deploy_button").hide();
}