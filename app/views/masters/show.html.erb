<%=
    begin
      site = @master.site
      page = site.pages.find_by_full_path("/")
      layout = page.layout
      app_layout = (layout.app_layout.blank? || request.xhr?) ? false : layout.app_layout
      render :inline => page.content, :layout => app_layout, :status => 200, :content_type => 'text/html'
    rescue
      render :text => I18n.t('cms.content.page_not_found'), :status => 404
    end
%>