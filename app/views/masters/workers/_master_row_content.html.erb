<td><%= link_to tag("i", :class => "icon-refresh"), master_worker_path(master, master), :class => "master_spinner", :remote => true -%>
  <%= link_to "#{master.name}", master_admin_path(master) -%></td>
<td><%= master.delayed_job_queue -%></td>
<td><%= counts[:workers] -%></td>
<td>
  <%= master.max_workers -%>
  <%- if false # we do not allow customers to alter their max workers -%>
    <%= link_to "-", down_limit_master_worker_path(master, master), :remote => true, :method => :post, :class => "btn btn-mini" -%>
    <%= link_to "+", up_limit_master_worker_path(master, master), :remote => true, :method => :post, :class => "btn btn-mini" -%>
  <%- end -%>
</td>
<td><%= counts[:jobs] -%></td>
<td><%= counts[:simulate] -%></td>
<td><%= counts[:compile] -%></td>
<td><%= button_to "Remove Jobs", remove_jobs_master_worker_path(master, master), :remote => true, :method => :delete, :class => "btn", :data => { :confirm => "Are you sure?" } -%></td>
<td><%= button_to "Start Workers", start_master_worker_path(master, master), :remote => true, :class => "btn" -%></td>
<td><%= button_to "Stop Workers", stop_master_worker_path(master, master), :remote => true, :method => :delete, :class => "btn", :data => {:confirm => "Are you sure?"}-%></td>